<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/border_review_recyclerview_item"
    android:elevation="5dp">


    <TextView
        android:id="@+id/myReviewShopName"
        android:layout_width="187dp"
        android:layout_height="20dp"
        android:text="test shop"
        android:textColor="#DF793E"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toEndOf="@+id/myReviewImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />


    <TextView
        android:id="@+id/myReviewShopAdd"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toEndOf="@+id/myReviewImage"
        app:layout_constraintTop_toBottomOf="@+id/myReviewShopName"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ "
        app:layout_constraintBottom_toBottomOf="@+id/myReviewShopAdd"
        app:layout_constraintEnd_toStartOf="@+id/myReviewShopAdd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/myReviewImage"
        app:layout_constraintTop_toTopOf="@+id/myReviewShopAdd"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ "
        app:layout_constraintBottom_toBottomOf="@+id/myReviewCategory"
        app:layout_constraintEnd_toStartOf="@+id/myReviewCategory"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/myReviewImage"
        app:layout_constraintTop_toTopOf="@+id/myReviewCategory"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/myReviewCategory"
        android:layout_width="78dp"
        android:layout_height="14dp"
        android:text="shopCategory"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@+id/myReviewImage"
        app:layout_constraintTop_toBottomOf="@+id/myReviewShopAdd"
        app:layout_constraintVertical_bias="0.104" />

    <ImageView
        android:id="@+id/myReviewImage"
        android:layout_width="68dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.163"
        app:srcCompat="@drawable/no_image_pic" />

    <TextView
        android:id="@+id/myReviewSummary"
        android:layout_width="295dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/border_review_recyclerview_item"
        android:paddingLeft="20dp"
        android:paddingTop="14dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myReviewRatingBar" />

    <ImageButton
        android:id="@+id/myReviewFixBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/myReviewShopName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pochareview_writebutton"
        app:tint="#AEA298" />

    <RatingBar
        android:id="@+id/myReviewRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#F8D15D"
        app:layout_constraintStart_toEndOf="@+id/myReviewCategory"
        app:layout_constraintTop_toBottomOf="@+id/myReviewShopAdd" />


</androidx.constraintlayout.widget.ConstraintLayout>